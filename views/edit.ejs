<%- include('partials/header') %>

<div class="container">
  <div class="movie-form">
    <div class="movie-preview">
      <img src="<%= movie.poster %>" alt="<%= movie.title %>" loading="lazy">
      <h2><%= movie.title %></h2>
    </div>

    <form action="/edit/<%= movie.id %>" method="POST">
      <label for="rating">Your Rating (1â€“10):</label>
      <input type="number" name="rating" value="<%= movie.rating %>" min="1" max="10" step="0.1" required>

      <label for="watched_date">Watched Date:</label>
      <input type="date" name="watched_date" value="<%= movie.watched_date.toISOString().split('T')[0] %>" required>

      <label for="review">Your Review:</label>
      <textarea name="review" required><%= movie.review %></textarea>

      <div style="display: flex; gap: 12px; margin-top: 8px;">
        <button type="submit" style="flex: 1;">Update Movie</button>
        <a href="/movies" style="flex: 1;">
          <button type="button" style="background: transparent; border: 1px solid var(--border-color); color: var(--text-secondary); width: 100%;">Cancel</button>
        </a>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>